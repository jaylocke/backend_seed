// START row
.row
    .panel.panel-default
        .panel-heading
            | Hover Rows
        .panel-body
            .table-responsive(ng-controller="ServerSideController as users")
                table.table.table-hover
                    thead
                        tr
                            th date
                            th feeAmount
                            th requestCount
                            th payAmount
                            th payCount
                            th 操作
                    tbody(ng-repeat="user in users.data")
                        tr
                            td {{ ::user.date }}
                            td {{ ::user.feeAmount }}
                            td {{ ::user.requestCount }}
                            td {{ ::user.payAmount }}
                            td {{ ::user.payCount }}
                            td
                                button.btn.btn-sm.btn-warning(type='button', ng-click='users.modifyPerson($index)')
                                    em.fa.fa-edit
                                button.btn.btn-sm.btn-danger(type='button', ng-click='users.removePerson($index)')
                                    em.fa.fa-trash-o
                .col-md-6.col-md-offset-6
                    pagination.pagination-sm(total-items='users.totalItems', ng-model='users.currentPage', max-size='users.maxSize', boundary-links='true', rotate='false', num-pages='users.numPages', ng-change='users.pageChanged()')
                    pre Page: {{users.currentPage}} / {{users.numPages}}

// END row

