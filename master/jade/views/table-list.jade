                    input.form-control(type='data', name='id', ng-model='ngDialogData.data', value='')
        div
            .form-group
                label
                    input.form-control(type='text', name='feeAmount', ng-model='ngDialogData.feeAmount', value='')
        div
            .form-group
                label
                    input.form-control(type='text', name='requestCount', ng-model='ngDialogData.requestCount', value='')
        div
            .form-group
                label
                    input.form-control(type='text', name='payAmount', ng-model='ngDialogData.payAmount', value='')
        div
            .form-group
                label
                    input.form-control(type='text', name='payCount', ng-model='ngDialogData.payCount', value='')

        button.btn.btn-primary.mr(type='button', ng-click='save(ngDialogData)') 保存
        button.btn.btn-default(type='button', ng-click="closeThisDialog(0)") 取消